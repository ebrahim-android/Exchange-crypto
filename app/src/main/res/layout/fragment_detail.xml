<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenido principal -->
    <ScrollView
        android:id="@+id/detail_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#282727"
        android:fillViewport="true"
        android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="AtrÃ¡s"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="#FFFFFF" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <!-- ðŸ”¹ Nombre de la crypto -->
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Ethereum"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/ivMic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="MicrÃ³fono"
                    android:src="@drawable/ic_mic"
                    app:tint="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/price_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/header_layout">

                <!-- ðŸ”¹ Precio actual -->
                <TextView
                    android:id="@+id/tvPrice"
                    style="@style/letter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$2,855.35"
                    android:textColor="#FFFFFF"
                    android:textSize="60sp" />

                <!-- ðŸ”¹ VariaciÃ³n porcentual -->
                <TextView
                    android:id="@+id/tvChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:paddingTop="6dp"
                    android:text="-2.04%"
                    android:textColor="#FF6666"
                    android:textSize="18sp"
                    app:drawableTint="#FF6666" />
            </LinearLayout>

            <!-- ðŸ”¹ GrÃ¡fico -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/price_info_layout" />

            <!-- ðŸ”¹ Filtros de rango de tiempo -->
            <LinearLayout
                android:id="@+id/time_range_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/metrics_layout"
                app:layout_constraintTop_toBottomOf="@id/lineChart">

                <Button
                    android:id="@+id/btn1D"
                    style="@style/TimeRangeButton"
                    android:layout_marginEnd="8dp"
                    android:text="1d" />

                <Button
                    android:id="@+id/btn1W"
                    style="@style/TimeRangeButton.Selected"
                    android:layout_marginEnd="8dp"
                    android:text="1w" />

                <Button
                    android:id="@+id/btn1M"
                    style="@style/TimeRangeButton"
                    android:layout_marginEnd="8dp"
                    android:text="1m" />

                <Button
                    android:id="@+id/btn6M"
                    style="@style/TimeRangeButton"
                    android:layout_marginEnd="8dp"
                    android:text="6m" />

                <Button
                    android:id="@+id/btn1Y"
                    style="@style/TimeRangeButton"
                    android:text="1Y+" /> </LinearLayout>

            <!-- ðŸ”¹ MÃ©tricas (Market Cap, Volume, High/Low) -->
            <LinearLayout
                android:id="@+id/metrics_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/time_range_layout">

                <!-- Market Cap -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:paddingEnd="8dp"
                        android:text="Market Cap"
                        android:textColor="#AAAAAA"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvMarketCap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="$1,200B"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333" />

                <!-- Volume 24h -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:paddingEnd="8dp"
                        android:text="Volume 24h"
                        android:textColor="#AAAAAA"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvVolume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="$30B"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333" />

                <!-- High / Low 24h -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:paddingEnd="8dp"
                        android:text="High / Low 24h"
                        android:textColor="#AAAAAA"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvHighLow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="$66,100 / $62,500"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- ðŸ”µ ProgressBar centrado sobre todo -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:visibility="gone" />

</FrameLayout>
